@inject AlgoritmaUzmani.Services.Interfaces.ISiteSettingService SiteSettingService
@{
    var language = ViewBag.Language ?? "tr";
    var isEnglish = language == "en";
    var siteName = isEnglish ? "Algorithm Expert" : "Algoritma Uzmanı";
    
    var googleAnalytics = await SiteSettingService.GetValueAsync("google_analytics");
    var googleTagManager = await SiteSettingService.GetValueAsync("google_tag_manager");
    var headerScripts = await SiteSettingService.GetHeaderScriptsAsync();
}
<!DOCTYPE html>
<html lang="@language">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <meta name="description" content="@ViewBag.MetaDescription" />
    @if (ViewBag.MetaKeywords != null)
    {
        <meta name="keywords" content="@ViewBag.MetaKeywords" />
    }
    
    <!-- SEO -->
    <link rel="canonical" href="@(Context.Request.Scheme)://@(Context.Request.Host)@ViewBag.CanonicalUrl" />
    @if (ViewBag.AlternateUrl != null)
    {
        <link rel="alternate" hreflang="@(isEnglish ? "tr" : "en")" href="@(Context.Request.Scheme)://@(Context.Request.Host)@ViewBag.AlternateUrl" />
        <link rel="alternate" hreflang="@language" href="@(Context.Request.Scheme)://@(Context.Request.Host)@ViewBag.CanonicalUrl" />
    }
    
    @* Google Analytics *@
    @if (!string.IsNullOrEmpty(googleAnalytics))
    {
        <script async src="https://www.googletagmanager.com/gtag/js?id=@googleAnalytics"></script>
        <script>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());
            gtag('config', '@googleAnalytics');
        </script>
    }
    
    @* Google Tag Manager *@
    @if (!string.IsNullOrEmpty(googleTagManager))
    {
        <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
        new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
        j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
        'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
        })(window,document,'script','dataLayer','@googleTagManager');</script>
    }
    
    @* Custom Header Scripts *@
    @Html.Raw(headerScripts)
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --primary: #0066ff;
            --primary-light: #e6f0ff;
            --secondary: #6b7280;
            --text: #111827;
            --text-light: #6b7280;
            --bg: #ffffff;
            --bg-soft: #f9fafb;
            --border: #e5e7eb;
            --accent-green: #10b981;
            --accent-purple: #8b5cf6;
            --accent-orange: #f59e0b;
            --accent-red: #ef4444;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Plus Jakarta Sans', -apple-system, BlinkMacSystemFont, sans-serif;
            color: var(--text);
            background: var(--bg);
            line-height: 1.6;
            -webkit-font-smoothing: antialiased;
        }

        a {
            color: inherit;
            text-decoration: none;
        }

        /* Header */
        .header {
            background: var(--bg);
            border-bottom: 1px solid var(--border);
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .header-inner {
            max-width: 1200px;
            margin: 0 auto;
            padding: 1rem 1.5rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .logo {
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--primary);
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .logo-icon {
            font-size: 1.5rem;
        }

        .nav {
            display: flex;
            align-items: center;
            gap: 2rem;
        }

        .nav-link {
            font-size: 0.9rem;
            font-weight: 500;
            color: var(--text-light);
            transition: color 0.15s;
        }

        .nav-link:hover {
            color: var(--primary);
        }

        .lang-switch {
            padding: 0.5rem 1rem;
            font-size: 0.85rem;
            font-weight: 500;
            border: 1px solid var(--border);
            border-radius: 0.5rem;
            background: var(--bg);
            color: var(--text);
            cursor: pointer;
            transition: all 0.15s;
        }

        .lang-switch:hover {
            border-color: var(--primary);
            color: var(--primary);
        }

        /* Main Layout */
        .main-layout {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem 1.5rem;
            display: grid;
            grid-template-columns: 260px 1fr;
            gap: 3rem;
        }

        @@media (max-width: 900px) {
            .main-layout {
                grid-template-columns: 1fr;
            }
        }

        /* Sidebar */
        .sidebar {
            position: sticky;
            top: 5rem;
            height: fit-content;
        }

        .sidebar-title {
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            color: var(--text-light);
            margin-bottom: 1rem;
        }

        .category-list {
            list-style: none;
        }

        .category-item {
            margin-bottom: 0.25rem;
        }

        .category-link {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.625rem 0.875rem;
            font-size: 0.9rem;
            font-weight: 500;
            color: var(--text-light);
            border-radius: 0.5rem;
            transition: all 0.15s;
        }

        .category-link:hover {
            background: var(--bg-soft);
            color: var(--text);
        }

        .category-link.active {
            background: var(--primary-light);
            color: var(--primary);
        }

        .category-icon {
            font-size: 1.1rem;
        }

        /* Content */
        .content {
            min-width: 0;
        }

        .page-header {
            margin-bottom: 2rem;
        }

        .page-title {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 0.75rem;
        }

        .page-description {
            font-size: 1.05rem;
            color: var(--text-light);
            max-width: 600px;
        }

        /* Guide Cards */
        .guide-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 1.25rem;
        }

        @@media (max-width: 768px) {
            .guide-grid {
                grid-template-columns: 1fr;
            }
        }

        .guide-card {
            background: var(--bg);
            border: 1px solid var(--border);
            border-radius: 0.75rem;
            padding: 1.5rem;
            transition: all 0.2s;
        }

        .guide-card:hover {
            border-color: var(--primary);
            box-shadow: 0 4px 12px rgba(0, 102, 255, 0.08);
        }

        .guide-card.featured {
            background: linear-gradient(135deg, #fef3c7 0%, #fef9c3 100%);
            border-color: #fcd34d;
        }

        .guide-tags {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
            margin-bottom: 0.75rem;
        }

        .tag {
            padding: 0.25rem 0.625rem;
            font-size: 0.75rem;
            font-weight: 500;
            border-radius: 9999px;
            background: var(--primary-light);
            color: var(--primary);
        }

        .tag.featured {
            background: #fef3c7;
            color: #92400e;
        }

        .guide-title {
            font-size: 1.125rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
            display: block;
        }

        .guide-title:hover {
            color: var(--primary);
        }

        .guide-summary {
            font-size: 0.9rem;
            color: var(--text-light);
            margin-bottom: 0.75rem;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .guide-meta {
            font-size: 0.8rem;
            color: var(--text-light);
        }

        /* Featured Card */
        .featured-card {
            background: var(--bg-soft);
            border-radius: 1rem;
            padding: 2rem;
            margin-bottom: 2rem;
            display: grid;
            grid-template-columns: 1fr auto;
            gap: 2rem;
            align-items: center;
        }

        .featured-badge {
            display: inline-block;
            padding: 0.375rem 0.875rem;
            font-size: 0.75rem;
            font-weight: 600;
            background: #fef3c7;
            color: #92400e;
            border-radius: 9999px;
            margin-bottom: 1rem;
        }

        .featured-title {
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .featured-summary {
            color: var(--text-light);
            margin-bottom: 1rem;
        }

        .featured-link {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            font-weight: 500;
            color: var(--primary);
        }

        .featured-image {
            width: 200px;
            height: 150px;
            border-radius: 0.75rem;
            object-fit: cover;
            background: var(--border);
        }

        /* Guide Detail */
        .guide-content {
            max-width: 800px;
        }

        .guide-content h1 { font-size: 2.25rem; margin-bottom: 1rem; }
        .guide-content h2 { font-size: 1.5rem; margin: 2rem 0 1rem; padding-bottom: 0.5rem; border-bottom: 1px solid var(--border); }
        .guide-content h3 { font-size: 1.25rem; margin: 1.5rem 0 0.75rem; }
        .guide-content h4 { font-size: 1.1rem; margin: 1.25rem 0 0.5rem; }
        .guide-content p { margin-bottom: 1rem; }
        .guide-content ul, .guide-content ol { margin: 1rem 0; padding-left: 1.5rem; }
        .guide-content li { margin-bottom: 0.5rem; }
        .guide-content blockquote {
            margin: 1.5rem 0;
            padding: 1rem 1.5rem;
            background: var(--bg-soft);
            border-left: 4px solid var(--primary);
            border-radius: 0 0.5rem 0.5rem 0;
        }
        .guide-content pre {
            margin: 1.5rem 0;
            padding: 1rem;
            background: #1e293b;
            color: #e2e8f0;
            border-radius: 0.5rem;
            overflow-x: auto;
            font-family: 'Fira Code', monospace;
            font-size: 0.9rem;
        }
        .guide-content code {
            padding: 0.125rem 0.375rem;
            background: var(--bg-soft);
            border-radius: 0.25rem;
            font-family: 'Fira Code', monospace;
            font-size: 0.9em;
        }
        .guide-content pre code {
            padding: 0;
            background: transparent;
        }
        .guide-content img {
            max-width: 100%;
            height: auto;
            border-radius: 0.5rem;
            margin: 1rem 0;
        }
        .guide-content a {
            color: var(--primary);
            text-decoration: underline;
        }

        /* Related Guides */
        .related-section {
            margin-top: 3rem;
            padding-top: 2rem;
            border-top: 1px solid var(--border);
        }

        .related-title {
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
        }

        /* Breadcrumb */
        .breadcrumb {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.875rem;
            color: var(--text-light);
            margin-bottom: 1.5rem;
        }

        .breadcrumb a:hover {
            color: var(--primary);
        }

        .breadcrumb-sep {
            color: var(--border);
        }

        /* Footer */
        .footer {
            margin-top: 4rem;
            padding: 2rem 0;
            border-top: 1px solid var(--border);
            text-align: center;
            color: var(--text-light);
            font-size: 0.875rem;
        }

        /* Utilities */
        .text-muted { color: var(--text-light); }
        .mb-2 { margin-bottom: 1rem; }
        .mb-3 { margin-bottom: 1.5rem; }

        /* Mobile Menu Toggle */
        .mobile-menu-btn {
            display: none;
            background: none;
            border: none;
            font-size: 1.5rem;
            cursor: pointer;
            padding: 0.5rem;
            color: var(--text);
        }

        /* Cookie Consent */
        .cookie-consent {
            display: none;
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            background: #1e293b;
            color: #fff;
            padding: 1rem 1.5rem;
            z-index: 9999;
            box-shadow: 0 -4px 20px rgba(0,0,0,0.15);
        }

        .cookie-consent-inner {
            max-width: 1200px;
            margin: 0 auto;
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .cookie-consent-text {
            margin: 0;
            font-size: 0.9rem;
            line-height: 1.5;
            flex: 1;
        }

        .cookie-link {
            color: #60a5fa;
            text-decoration: underline;
            margin-left: 0.25rem;
        }

        .cookie-buttons {
            display: flex;
            gap: 0.5rem;
        }

        .cookie-btn {
            padding: 0.5rem 1rem;
            border: none;
            border-radius: 0.375rem;
            font-size: 0.85rem;
            font-weight: 500;
            cursor: pointer;
            white-space: nowrap;
        }

        .cookie-btn-accept {
            background: #3b82f6;
            color: #fff;
        }

        .cookie-btn-decline {
            background: transparent;
            color: #94a3b8;
            border: 1px solid #475569;
        }

        @@media (max-width: 600px) {
            .cookie-consent {
                padding: 0.875rem 1rem;
            }

            .cookie-consent-inner {
                flex-direction: column;
                text-align: center;
                gap: 0.75rem;
            }

            .cookie-consent-text {
                font-size: 0.8rem;
            }

            .cookie-btn {
                padding: 0.4rem 0.875rem;
                font-size: 0.8rem;
            }
        }

        /* Responsive - Tablet */
        @@media (max-width: 900px) {
            .main-layout {
                grid-template-columns: 1fr;
                gap: 1.5rem;
                padding: 1.5rem 1rem;
            }

            .sidebar {
                position: relative;
                top: 0;
                display: none;
                background: var(--bg-soft);
                border-radius: 0.75rem;
                padding: 1rem;
            }

            .sidebar.show {
                display: block;
            }

            .category-list {
                display: flex;
                flex-wrap: wrap;
                gap: 0.5rem;
            }

            .category-item {
                margin-bottom: 0;
            }

            .category-link {
                padding: 0.5rem 0.75rem;
                font-size: 0.85rem;
                background: var(--bg);
                border: 1px solid var(--border);
            }

            .mobile-menu-btn {
                display: block;
            }
        }

        /* Responsive - Mobile */
        @@media (max-width: 768px) {
            .header-inner {
                padding: 0.75rem 1rem;
            }

            .logo {
                font-size: 1.1rem;
            }

            .logo-icon {
                font-size: 1.25rem;
            }

            .nav {
                gap: 0.75rem;
            }

            .nav-link {
                font-size: 0.85rem;
            }

            .lang-switch {
                padding: 0.4rem 0.75rem;
                font-size: 0.8rem;
            }

            .page-header {
                margin-bottom: 1.5rem;
            }

            .page-title {
                font-size: 1.5rem;
                line-height: 1.3;
            }

            .page-description {
                font-size: 0.95rem;
            }

            .featured-card {
                grid-template-columns: 1fr;
                padding: 1.25rem;
                gap: 1rem;
            }

            .featured-title {
                font-size: 1.25rem;
            }

            .featured-summary {
                font-size: 0.9rem;
            }

            .featured-image {
                width: 100%;
                height: 180px;
                order: -1;
            }

            .guide-grid {
                grid-template-columns: 1fr;
                gap: 1rem;
            }

            .guide-card {
                padding: 1.25rem;
            }

            .guide-title {
                font-size: 1rem;
            }

            .guide-summary {
                font-size: 0.85rem;
            }

            .breadcrumb {
                font-size: 0.8rem;
                overflow-x: auto;
                white-space: nowrap;
                padding-bottom: 0.5rem;
                margin-bottom: 1rem;
            }

            .guide-content h1 {
                font-size: 1.75rem;
            }

            .guide-content h2 {
                font-size: 1.25rem;
            }

            .guide-content h3 {
                font-size: 1.1rem;
            }

            .guide-content {
                font-size: 0.95rem;
            }

            .guide-content pre {
                font-size: 0.8rem;
                padding: 0.75rem;
            }

            .related-section {
                margin-top: 2rem;
                padding-top: 1.5rem;
            }

            .footer {
                margin-top: 2rem;
                padding: 1.5rem 0;
            }

            .footer > div > div:first-child {
                gap: 1rem !important;
                font-size: 0.8rem;
            }
        }

        /* Responsive - Small Mobile */
        @@media (max-width: 480px) {
            .header-inner {
                padding: 0.625rem 0.75rem;
            }

            .logo {
                font-size: 1rem;
            }

            .nav-link {
                display: none;
            }

            .main-layout {
                padding: 1rem 0.75rem;
            }

            .page-title {
                font-size: 1.35rem;
            }

            .guide-content h1 {
                font-size: 1.5rem;
            }

            .featured-card {
                padding: 1rem;
            }

            .featured-title {
                font-size: 1.15rem;
            }

            .guide-card {
                padding: 1rem;
            }

            .cookie-consent-inner {
                flex-direction: column;
                text-align: center;
            }
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header class="header">
        <div class="header-inner">
            <a href="@(isEnglish ? "/en" : "/")" class="logo">
                <span class="logo-icon">⚡</span>
                @siteName
            </a>
            <nav class="nav">
                <a href="@(isEnglish ? "/en/guides" : "/rehberler")" class="nav-link">
                    @(isEnglish ? "Guides" : "Rehberler")
                </a>
                @if (isEnglish)
                {
                    <a href="@(ViewBag.AlternateUrl ?? "/")" class="lang-switch">🇹🇷 TR</a>
                }
                else
                {
                    <a href="@(ViewBag.AlternateUrl ?? "/en")" class="lang-switch">🇬🇧 EN</a>
                }
                <button class="mobile-menu-btn" onclick="toggleSidebar()" aria-label="Menü">☰</button>
            </nav>
        </div>
    </header>

    @RenderBody()

    <footer class="footer">
        <div style="max-width: 1200px; margin: 0 auto; padding: 0 1.5rem;">
            <div style="display: flex; justify-content: center; gap: 2rem; margin-bottom: 1rem; flex-wrap: wrap;">
                <a href="@(isEnglish ? "/en/page/hakkinda" : "/sayfa/hakkinda")" style="color: var(--text-light); transition: color 0.15s;">
                    @(isEnglish ? "About" : "Hakkında")
                </a>
                <a href="@(isEnglish ? "/en/page/gizlilik" : "/sayfa/gizlilik")" style="color: var(--text-light); transition: color 0.15s;">
                    @(isEnglish ? "Privacy Policy" : "Gizlilik Politikası")
                </a>
                <a href="@(isEnglish ? "/en/page/cerez-politikasi" : "/sayfa/cerez-politikasi")" style="color: var(--text-light); transition: color 0.15s;">
                    @(isEnglish ? "Cookie Policy" : "Çerez Politikası")
                </a>
                <a href="/sitemap.xml" style="color: var(--text-light); transition: color 0.15s;">
                    Sitemap
                </a>
            </div>
            <div>© @DateTime.Now.Year @siteName. @(isEnglish ? "All rights reserved." : "Tüm hakları saklıdır.")</div>
        </div>
    </footer>

    <!-- Cookie Consent Banner -->
    <div id="cookieConsent" class="cookie-consent">
        <div class="cookie-consent-inner">
            <p class="cookie-consent-text">
                @(isEnglish 
                    ? "We use cookies to improve your experience." 
                    : "Deneyiminizi iyileştirmek için çerezler kullanıyoruz.")
                <a href="@(isEnglish ? "/en/page/cerez-politikasi" : "/sayfa/cerez-politikasi")" class="cookie-link">
                    @(isEnglish ? "Learn more" : "Daha fazla")
                </a>
            </p>
            <div class="cookie-buttons">
                <button onclick="acceptCookies()" class="cookie-btn cookie-btn-accept">
                    @(isEnglish ? "Accept" : "Kabul")
                </button>
                <button onclick="declineCookies()" class="cookie-btn cookie-btn-decline">
                    @(isEnglish ? "Decline" : "Reddet")
                </button>
            </div>
        </div>
    </div>

    <script>
        // Cookie Consent
        (function() {
            var consent = localStorage.getItem('cookieConsent');
            if (!consent) {
                document.getElementById('cookieConsent').style.display = 'block';
            }
        })();

        function acceptCookies() {
            localStorage.setItem('cookieConsent', 'accepted');
            document.getElementById('cookieConsent').style.display = 'none';
        }

        function declineCookies() {
            localStorage.setItem('cookieConsent', 'declined');
            document.getElementById('cookieConsent').style.display = 'none';
        }

        // Mobile Sidebar Toggle
        function toggleSidebar() {
            var sidebar = document.querySelector('.sidebar');
            if (sidebar) {
                sidebar.classList.toggle('show');
            }
        }

        // Close sidebar when clicking outside
        document.addEventListener('click', function(e) {
            var sidebar = document.querySelector('.sidebar');
            var menuBtn = document.querySelector('.mobile-menu-btn');
            if (sidebar && sidebar.classList.contains('show')) {
                if (!sidebar.contains(e.target) && !menuBtn.contains(e.target)) {
                    sidebar.classList.remove('show');
                }
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
    
    @* Google Tag Manager (noscript) *@
    @if (!string.IsNullOrEmpty(googleTagManager))
    {
        <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=@googleTagManager"
        height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    }
    
    @* Custom Footer Scripts *@
    @{
        var footerScripts = await SiteSettingService.GetFooterScriptsAsync();
    }
    @Html.Raw(footerScripts)
</body>
</html>
