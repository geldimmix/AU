@using AlgoritmaUzmani.Models.Entities
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_AdminLayout";
    var recentGuides = ViewBag.RecentGuides as List<Guide> ?? new List<Guide>();
}

<div class="stats-grid">
    <div class="stat-card">
        <div class="stat-icon blue">
            <i class="fas fa-folder"></i>
        </div>
        <div class="stat-label">Toplam Kategori</div>
        <div class="stat-value">@ViewBag.TotalCategories</div>
    </div>
    <div class="stat-card">
        <div class="stat-icon green">
            <i class="fas fa-book"></i>
        </div>
        <div class="stat-label">Toplam Rehber</div>
        <div class="stat-value">@ViewBag.TotalGuides</div>
    </div>
    <div class="stat-card">
        <div class="stat-icon purple">
            <i class="fas fa-check-circle"></i>
        </div>
        <div class="stat-label">Aktif Rehber</div>
        <div class="stat-value">@ViewBag.ActiveGuides</div>
    </div>
    <div class="stat-card">
        <div class="stat-icon orange">
            <i class="fas fa-language"></i>
        </div>
        <div class="stat-label">Çevrilmiş Rehber</div>
        <div class="stat-value">@ViewBag.TranslatedGuides</div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h2 class="card-title">Son Eklenen Rehberler</h2>
        <a href="/admin/guides/create" class="btn btn-primary btn-sm">
            <i class="fas fa-plus"></i>
            Yeni Rehber
        </a>
    </div>
    <div class="table-wrapper">
        <table>
            <thead>
                <tr>
                    <th>Başlık</th>
                    <th>Kategori</th>
                    <th>Durum</th>
                    <th>Tarih</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tbody>
                @if (recentGuides.Any())
                {
                    @foreach (var guide in recentGuides)
                    {
                        <tr>
                            <td>@guide.TitleTr</td>
                            <td>@guide.Category?.NameTr</td>
                            <td>
                                @if (guide.IsActive)
                                {
                                    <span class="badge badge-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">Taslak</span>
                                }
                                @if (guide.IsTranslated)
                                {
                                    <span class="badge badge-info">EN</span>
                                }
                            </td>
                            <td>@guide.CreatedAt.ToString("dd.MM.yyyy")</td>
                            <td>
                                <a href="/admin/guides/edit/@guide.Id" class="btn btn-secondary btn-sm">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" style="text-align: center; padding: 2rem; color: var(--text-secondary);">
                            Henüz rehber eklenmemiş.
                            <a href="/admin/guides/create">İlk rehberi ekleyin</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="mt-3" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 1.5rem;">
    <div class="card">
        <div class="card-header">
            <h2 class="card-title">Hızlı Erişim</h2>
        </div>
        <div class="card-body">
            <div style="display: flex; flex-direction: column; gap: 0.75rem;">
                <a href="/admin/guides/create" class="btn btn-primary" style="justify-content: flex-start;">
                    <i class="fas fa-plus"></i>
                    Yeni Rehber Ekle
                </a>
                <a href="/admin/categories/create" class="btn btn-secondary" style="justify-content: flex-start;">
                    <i class="fas fa-folder-plus"></i>
                    Yeni Kategori Ekle
                </a>
                <a href="/admin/tags/create" class="btn btn-secondary" style="justify-content: flex-start;">
                    <i class="fas fa-tag"></i>
                    Yeni Etiket Ekle
                </a>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h2 class="card-title">Sistem Araçları</h2>
        </div>
        <div class="card-body">
            <div style="display: flex; flex-direction: column; gap: 1rem;">
                <div>
                    <p class="text-muted mb-2" style="font-size: 0.875rem;">
                        <i class="fas fa-sync-alt"></i> Cache sistemi aktif. Değişiklikler anında yansımıyorsa önbelleği temizleyin.
                    </p>
                    <form asp-action="ClearCache" asp-controller="Admin" method="post" style="display: inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-secondary btn-sm">
                            <i class="fas fa-sync-alt"></i>
                            Önbelleği Temizle
                        </button>
                    </form>
                </div>
                
                <div style="border-top: 1px solid var(--border); padding-top: 1rem;">
                    <p class="text-muted mb-2" style="font-size: 0.875rem;">
                        <i class="fas fa-code"></i> HTML etiketleri escape edilmiş rehberleri otomatik düzelt.
                    </p>
                    <form asp-action="FixHtmlEncoding" asp-controller="Admin" method="post" 
                          onsubmit="return confirm('Tüm rehberlerdeki escape edilmiş HTML kodları düzeltilecek. Devam edilsin mi?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-warning btn-sm">
                            <i class="fas fa-wrench"></i>
                            HTML Kodlamasını Düzelt
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



