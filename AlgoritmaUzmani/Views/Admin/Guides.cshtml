@model List<AlgoritmaUzmani.Models.Entities.Guide>
@{
    ViewData["Title"] = "Rehberler";
    Layout = "_AdminLayout";
}

<div class="card">
    <div class="card-header">
        <h2 class="card-title">Tüm Rehberler (@Model.Count)</h2>
        <a href="/admin/guides/create" class="btn btn-primary btn-sm">
            <i class="fas fa-plus"></i>
            Yeni Rehber
        </a>
    </div>
    <div class="table-wrapper">
        <table>
            <thead>
                <tr>
                    <th>Başlık</th>
                    <th>Kategori</th>
                    <th>Etiketler</th>
                    <th>Durum</th>
                    <th>Görüntülenme</th>
                    <th>Tarih</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var guide in Model.OrderByDescending(g => g.CreatedAt))
                    {
                        <tr>
                            <td>
                                <strong>@guide.TitleTr</strong>
                                @if (guide.IsFeatured)
                                {
                                    <span class="badge badge-warning" style="margin-left: 0.5rem;">Öne Çıkan</span>
                                }
                            </td>
                            <td>
                                <span style="display: inline-flex; align-items: center; gap: 0.25rem;">
                                    @guide.Category?.Icon @guide.Category?.NameTr
                                </span>
                            </td>
                            <td>
                                @foreach (var tag in guide.GuideTags.Take(3))
                                {
                                    <span class="badge badge-info" style="margin-right: 0.25rem;">@tag.Tag.NameTr</span>
                                }
                                @if (guide.GuideTags.Count > 3)
                                {
                                    <span class="text-muted">+@(guide.GuideTags.Count - 3)</span>
                                }
                            </td>
                            <td>
                                @if (guide.IsActive)
                                {
                                    <span class="badge badge-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">Taslak</span>
                                }
                                @if (guide.IsTranslated)
                                {
                                    <span class="badge badge-info">EN</span>
                                }
                            </td>
                            <td>@guide.ViewCount.ToString("N0")</td>
                            <td>@guide.CreatedAt.ToString("dd.MM.yyyy")</td>
                            <td>
                                <div class="table-actions">
                                    <a href="/admin/guides/edit/@guide.Id" class="btn btn-secondary btn-sm" title="Düzenle">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="/rehberler/@guide.Category?.SlugTr/@guide.SlugTr" target="_blank" 
                                       class="btn btn-secondary btn-sm" title="Görüntüle">
                                        <i class="fas fa-external-link-alt"></i>
                                    </a>
                                    <form asp-action="DeleteGuide" asp-route-id="@guide.Id" method="post" style="display: inline;"
                                          onsubmit="return confirm('Bu rehberi silmek istediğinize emin misiniz?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-danger btn-sm" title="Sil">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" style="text-align: center; padding: 3rem; color: var(--text-secondary);">
                            <i class="fas fa-book" style="font-size: 3rem; margin-bottom: 1rem; display: block; opacity: 0.3;"></i>
                            Henüz rehber eklenmemiş.
                            <br>
                            <a href="/admin/guides/create" class="btn btn-primary" style="margin-top: 1rem;">
                                <i class="fas fa-plus"></i> İlk Rehberi Ekle
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

