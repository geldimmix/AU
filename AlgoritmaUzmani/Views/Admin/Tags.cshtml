@model List<AlgoritmaUzmani.Models.Entities.Tag>
@{
    ViewData["Title"] = "Etiketler";
    Layout = "_AdminLayout";
}

<div class="card">
    <div class="card-header">
        <h2 class="card-title">Ana Etiketler (@Model.Count)</h2>
        <a href="/admin/tags/create" class="btn btn-primary btn-sm">
            <i class="fas fa-plus"></i>
            Yeni Etiket
        </a>
    </div>
    <div class="table-wrapper">
        <table>
            <thead>
                <tr>
                    <th>İsim (TR)</th>
                    <th>İsim (EN)</th>
                    <th>Renk</th>
                    <th>Slug</th>
                    <th>Kullanım</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var tag in Model)
                    {
                        <tr>
                            <td>
                                <span class="badge" style="background: @(tag.Color ?? "#dbeafe"); color: @(string.IsNullOrEmpty(tag.Color) ? "#1e40af" : "#fff");">
                                    @tag.NameTr
                                </span>
                            </td>
                            <td class="text-muted">@(tag.NameEn ?? "-")</td>
                            <td>
                                @if (!string.IsNullOrEmpty(tag.Color))
                                {
                                    <div style="width: 24px; height: 24px; background: @tag.Color; border-radius: 4px; border: 1px solid #e2e8f0;"></div>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td><code>@tag.SlugTr</code></td>
                            <td>@tag.GuideTags.Count rehber</td>
                            <td>
                                <div class="table-actions">
                                    <a href="/admin/tags/edit/@tag.Id" class="btn btn-secondary btn-sm" title="Düzenle">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    @if (tag.GuideTags.Count == 0)
                                    {
                                        <form asp-action="DeleteTag" asp-route-id="@tag.Id" method="post" style="display: inline;"
                                              onsubmit="return confirm('Bu etiketi silmek istediğinize emin misiniz?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-danger btn-sm" title="Sil">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" style="text-align: center; padding: 2rem; color: var(--text-secondary);">
                            Henüz etiket eklenmemiş.
                            <a href="/admin/tags/create">İlk etiketi ekleyin</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



