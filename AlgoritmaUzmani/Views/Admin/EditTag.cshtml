@model AlgoritmaUzmani.Models.ViewModels.Admin.TagViewModel
@{
    ViewData["Title"] = "Etiket Düzenle";
    Layout = "_AdminLayout";
}

<div class="card" style="max-width: 600px;">
    <div class="card-header">
        <h2 class="card-title">Etiket Düzenle</h2>
    </div>
    <div class="card-body">
        <form asp-action="EditTag" asp-route-id="@Model.Id" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="NameTr" class="form-label">İsim (TR) *</label>
                <input asp-for="NameTr" class="form-control" />
                <span asp-validation-for="NameTr" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NameEn" class="form-label">İsim (EN)</label>
                <input asp-for="NameEn" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Color" class="form-label">Renk</label>
                <div style="display: flex; gap: 0.5rem; align-items: center;">
                    <input asp-for="Color" type="color" style="width: 50px; height: 38px; padding: 0; border: 1px solid var(--border); border-radius: 0.375rem; cursor: pointer;" />
                    <input type="text" id="colorText" class="form-control" value="@Model.Color" style="flex: 1;" />
                </div>
            </div>

            <div class="form-group">
                <label class="form-label">Önizleme</label>
                <div>
                    <span id="tagPreview" class="badge" style="background: @(Model.Color ?? "#dbeafe"); color: @(string.IsNullOrEmpty(Model.Color) ? "#1e40af" : "#fff"); font-size: 0.875rem; padding: 0.5rem 1rem;">
                        @Model.NameTr
                    </span>
                </div>
            </div>

            <div style="display: flex; gap: 1rem; margin-top: 1.5rem;">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i>
                    Güncelle
                </button>
                <a href="/admin/tags" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i>
                    Geri
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
<script>
    const colorInput = document.getElementById('Color');
    const colorText = document.getElementById('colorText');
    const preview = document.getElementById('tagPreview');
    const nameInput = document.getElementById('NameTr');

    colorInput.addEventListener('input', function() {
        colorText.value = this.value;
        preview.style.background = this.value;
        preview.style.color = '#fff';
    });

    colorText.addEventListener('input', function() {
        if (/^#[0-9A-Fa-f]{6}$/.test(this.value)) {
            colorInput.value = this.value;
            preview.style.background = this.value;
            preview.style.color = '#fff';
        }
    });

    nameInput.addEventListener('input', function() {
        preview.textContent = this.value || 'Etiket Önizleme';
    });
</script>
}



